{
  "name": "passage",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules",
    "dev": "pnpm --parallel -r dev",
    "build": "pnpm --parallel -r build",
    "build:unified": "pnpm -r build && rm -rf apps/passage-backend/dist/frontend && cp -r apps/passage-frontend/dist apps/passage-backend/dist/frontend",
    "start": "node apps/passage-backend/dist/server.js",
    "lint": "biome check --write .",
    "format": "biome format --write ."
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "esbuild",
      "sharp"
    ]
  }
}
